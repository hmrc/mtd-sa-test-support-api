{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Create a checkpoint",
  "type": "object",
  "properties": {
    "checkpointId": {
      "type": "string",
      "description": "The unique ID of the checkpoint.",
      "pattern": "^[A-Za-z0-9\\-]{36}$"
    },
    "links": {
      "type": "array",
      "items": {
        "type": "object",
        "description": "A list of endpoint links that indicate possible actions related to the current resource.",
        "properties": {
          "href": {
            "description": "The relative url of the endpoint.",
            "type": "string",
            "example": "https://test-api.service.hmrc.gov.uk/individuals/self-assessment-test-support/vendor-state/checlpoints"
          },
          "method": {
            "description": "The HTTP method type for the endpoint.",
            "type": "string",
            "enum": [
              "GET",
              "PUT",
              "POST",
              "DELETE"
            ]
          },
          "rel": {
            "description": "A label for the endpoint, which describes how it is related to the current resource\nThe rel will be self where the action is retrieval of the same resource.",
            "type": "string",
            "enum": [
              "self",
              "create-checkpoint",
              "delete-checkpoint",
              "restore-checkpoint",
              "list-checkpoints"
            ]
          }
        },
        "required": [
          "href",
          "method",
          "rel"
        ],
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}